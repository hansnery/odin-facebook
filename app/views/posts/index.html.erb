<div class="content p-2 is-narrow">
  <div class="columns">
    <div class="column">
      <!-- First column. -->
    </div>
    <div class="column">
      <%= render 'partials/new_post' %>
      <% @posts.each do |post| %>
        <div class="box my-4">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64 mx-0">
                <%= image_tag post.user.gravatar_url, :class => "gravatar is-rounded" %>
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= post.user.name %></strong> <small><%= post.user.email %></small><small> - <%= time_ago_in_words(post.created_at.time) %> ago</small>
                  <br>
                  <%= post.text %>
                </p>
              </div>
              <nav class="level is-mobile">
                <div class="level-left">
                  <a class="level-item" aria-label="reply">
                    <span class="icon is-small">
                      <i class="fas fa-reply" aria-hidden="true"></i>
                    </span>
                  </a>
                  <a class="level-item" aria-label="retweet">
                    <span class="icon is-small">
                      <i class="fas fa-retweet" aria-hidden="true"></i>
                    </span>
                  </a>
                  <a class="level-item" aria-label="like">
                    <span class="icon is-small">
                      <i class="fas fa-heart" aria-hidden="true"></i>
                    </span>
                  </a>
                </div>
              </nav>
            </div>
          </article>
        </div>
      <% end %>
    </div>
    <div class="column">
      <!-- Second column. -->
    </div>
  </div>
</div>
