<div class="container">
  <div class="content is-medium is-narrow">
    <div class="columns">
      <div class="column">
        <!-- First column. -->
      </div>
      <div class="column">
        <%= render 'partials/new_post' %>
          <table>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.text %></td>
              </tr>
            <% end %>
          </table>
      </div>
      <div class="column">
        <!-- Second column. -->
      </div>
    </div>
  </div>
</div>
