<div class="container">
  <div class="content is-medium is-narrow">
    <div class="columns">
      <div class="column">
        <!-- First column. -->
      </div>
      <div class="column">
        <%= render 'partials/new_post' %>
        <% @posts.each do |post| %>
          <div class="box mt-4 mb-4">
            <%= post.text %>
          </div>
        <% end %>
      </div>
      <div class="column">
        <!-- Second column. -->
      </div>
    </div>
  </div>
</div>
